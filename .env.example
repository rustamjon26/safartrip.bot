# ==============================================================================
# Safar.uz Bot - Environment Template
# Copy this file to .env and fill in values.
# NEVER commit .env to git.
# ==============================================================================

# Telegram bot token (get from @BotFather)
BOT_TOKEN=your_bot_token_here

# Admin Telegram user IDs (comma-separated, get from @userinfobot)
ADMINS=123456789,987654321

# ------------------------------------------------------------------------------
# PostgreSQL Database (Railway automatically sets DATABASE_URL)
# Format: postgresql://user:password@host:port/dbname
DATABASE_URL=postgresql://localhost:5432/safaruz_bot

# PostgreSQL SSL mode (Railway uses 'require')
PGSSLMODE=require

# Database reset safety (NEVER set to 'true' in production!)
# Allows /admin_db_reset command to drop all tables
ALLOW_DB_RESET=false

# ------------------------------------------------------------------------------
# Pyrogram/Telegram API (only if you use bot/bot.py)
# Get from https://my.telegram.org/apps
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# ------------------------------------------------------------------------------
# Django backend (only if you use backend/)
# Generate: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your_django_secret_key_here

# true for dev, false for production
DJANGO_DEBUG=true

# comma-separated hostnames for production
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
